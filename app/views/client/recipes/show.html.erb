
<h2><%= @recipe["title"] %></h2>

<h3>Prep Time: <%= @recipe["formatted"]["prep_time"] %></h3>

<h3>Chef: <%= @recipe["chef"] %></h3>

<h4>Ingredients: </h4>
<ul>
  <% @recipe["formatted"]["ingredients"].each do |ingredient| %>
    <li><%= ingredient %></li>
  <% end %>
</ul>

<h4>Directions: </h4>
<ol>
  <% @recipe["formatted"]["directions"].each do |direction| %>
    <li><%= ingredient %></li>
  <% end %>
</ol>

<h4>Directions: <%= @recipe["directions"] %></h4>
<img src="<%= @recipe['image_url'] %>" alt="">
<br>
<a href="/client/recipes/<%= @recipe['id'] %>/edit">Edit</a>
